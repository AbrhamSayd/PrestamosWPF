<Window
    x:Class="PrestamosWPF.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customControls="clr-namespace:PrestamosWPF.customControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:PrestamosWPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:PrestamosWPF.ViewModels"
    Width="1152"
    Height="648"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>
    <Border Background="White" CornerRadius="50">
        <DockPanel>
            <DockPanel HorizontalAlignment="Left">
                <Border
                    Margin="-1,-1,0,-1"
                    Background="#1e355e"
                    CornerRadius="50">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="1" />
                    </Border.Effect>
                    <Grid>
                        <StackPanel Width="150" Orientation="Vertical">

                            <Image Margin="20" Source="/Images/logo-tecnm-2018_white.png" />

                            <!--  BOTON PRESTAMOS  -->
                            <customControls:btnLateralTemplate Margin="0,20,0,0">
                                <DockPanel Margin="15,0,0,0">
                                    <fa:IconImage
                                        DockPanel.Dock="Left"
                                        Foreground="White"
                                        Icon="StickyNote" />
                                    <TextBlock
                                        Margin="0,0,35,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Text="Prestamos" />
                                </DockPanel>
                            </customControls:btnLateralTemplate>

                            <!--  BOTON HERRAMIENTAS  -->
                            <customControls:btnLateralTemplate Margin="0,20,0,0">
                                <DockPanel Margin="15,0,0,0">
                                    <fa:IconImage
                                        DockPanel.Dock="Left"
                                        Foreground="White"
                                        Icon="Toolbox" />
                                    <TextBlock
                                        Margin="0,0,20,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Text="Herramientas" />
                                </DockPanel>
                            </customControls:btnLateralTemplate>

                            <!--  BOTON LABORATORIOS  -->
                            <customControls:btnLateralTemplate Margin="0,20,0,0">
                                <DockPanel Margin="20,0,0,0">
                                    <fa:IconImage
                                        DockPanel.Dock="Left"
                                        Foreground="White"
                                        Icon="Building" />
                                    <TextBlock
                                        Margin="0,0,22,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Text="Laboratorios" />
                                </DockPanel>
                            </customControls:btnLateralTemplate>

                            <!--  BOTON LABORATORISTAS  -->
                            <customControls:btnLateralTemplate Margin="0,20,0,0">
                                <DockPanel Margin="15,0,0,0">
                                    <fa:IconImage
                                        DockPanel.Dock="Left"
                                        Foreground="White"
                                        Icon="Users" />
                                    <TextBlock
                                        Margin="0,0,12,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Text="Laboratoristas" />
                                </DockPanel>
                            </customControls:btnLateralTemplate>
                        </StackPanel>

                        <StackPanel VerticalAlignment="Bottom">
                            <!--  BOTON CUENTAS  -->
                            <customControls:btnLateralTemplate Margin="0,0,0,20">
                                <DockPanel Margin="15,0,0,0">
                                    <fa:IconImage
                                        DockPanel.Dock="Left"
                                        Foreground="White"
                                        Icon="UserCircle" />
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        Foreground="White"
                                        Text="Cuentas" />
                                </DockPanel>
                            </customControls:btnLateralTemplate>

                            <!--  BOTON Salir  -->
                            <customControls:btnLateralTemplate
                                MaxHeight="30"
                                Margin="0,0,0,25"
                                HorizontalContentAlignment="Center">
                                <DockPanel Margin="0,0,0,0">
                                    <fa:IconImage
                                        DockPanel.Dock="Left"
                                        Foreground="White"
                                        Icon="ArrowRightToBracket" />
                                </DockPanel>
                            </customControls:btnLateralTemplate>
                        </StackPanel>
                    </Grid>
                </Border>
            </DockPanel>
            <DockPanel Width="auto">
                <!--  TOP PANEL  -->
                <DockPanel DockPanel.Dock="Top">
                    <StackPanel Margin="35,0,0,0" VerticalAlignment="Center">
                        <TextBlock
                            x:Name="txtNombreApartado"
                            FontFamily="Roboto Mono"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Foreground="#31579d"
                            Text="NOMBRE DEL APARTADO"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <customControls:btnClose Margin="0,10,5,10" />
                        <customControls:btnMinimize Margin="0,10,30,10" />
                    </StackPanel>
                </DockPanel>

                <!--  DOCKPANEL CONTENT  -->
                <StackPanel
                    x:Name="DockChilds"
                    Margin="10,0,10,10"
                    Background="LightCyan">

                    <TextBox Text="{Binding Id, Mode=TwoWay}" />
                    <TextBox Text="{Binding FirstName, Mode=TwoWay}" />
                    <TextBox Text="{Binding LastName, Mode=TwoWay}" />
                    <TextBox Text="{Binding Username, Mode=TwoWay}" />
                    <TextBox Text="{Binding Password, Mode=TwoWay}" />
                    <TextBox Text="{Binding Carrera, Mode=TwoWay}" />
                    <TextBox Text="{Binding TipoEmpleado, Mode=TwoWay}" />
                    <TextBox Text="{Binding Area, Mode=TwoWay}" />
                    <TextBox Margin="0,30,0,0" Text="{Binding IdSelector, Mode=TwoWay}" />

                    <Button
                        x:Name="btnLogin"
                        Width="156"
                        Margin="0,0,0,20"
                        BorderThickness="0"
                        Command="{Binding updateCommand}"
                        Content="Siguiente"
                        Cursor="Hand"
                        FontFamily="{StaticResource SFUIDisplay}"
                        FontSize="24"
                        Foreground="Gray" />

                    <Button
                        x:Name="btnLogin2"
                        Width="156"
                        Margin="0,0,0,20"
                        BorderThickness="0"
                        Command="{Binding GetUsersByUsernameCommand}"
                        Content="popular"
                        Cursor="Hand"
                        FontFamily="{StaticResource SFUIDisplay}"
                        FontSize="24"
                        Foreground="Gray" />

                    <Button
                        x:Name="btnUpdate"
                        Width="156"
                        Margin="0,0,0,0"
                        BorderThickness="0"
                        Command="{Binding updateCommand}"
                        Content="update"
                        Cursor="Hand"
                        FontFamily="{StaticResource SFUIDisplay}"
                        FontSize="24"
                        Foreground="Gray" />






                </StackPanel>






            </DockPanel>
        </DockPanel>
    </Border>
</Window>
