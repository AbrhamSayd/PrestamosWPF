<Window x:Class="PrestamosWPF.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:PrestamosWPF.Views"
        xmlns:customControls="clr-namespace:PrestamosWPF.customControls"
        xmlns:viewModel="clr-namespace:PrestamosWPF.ViewModels"
        mc:Ignorable="d" Height="648" Width="1152"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Border
        Background="White"
        CornerRadius="50">
        <DockPanel>
            <DockPanel
            HorizontalAlignment="Left">
                <Border
                    Margin="-1,-1,0,-1"
                    Background="#1e355e"
                    CornerRadius="50">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="1"/>
                    </Border.Effect>
                    <Grid>
                        <StackPanel
                    Orientation="Vertical"
                    Width="150">

                            <Image
                           Margin="20"
                           Source="/Images/logo-tecnm-2018_white.png" />

                            <!--BOTON PRESTAMOS-->
                            <Button
                            Background="Transparent"
                            Margin="0,20,0,0"
                            MaxHeight="30"
                            HorizontalContentAlignment="Left">
                                <StackPanel
                                Orientation="Horizontal"
                                Margin="15,0,0,0">
                                    <fa:IconImage 
                                    Foreground="White"
                                    Icon="List"/>
                                    <TextBlock
                                VerticalAlignment="Center"
                                Text="Prestamos"
                                Foreground="White"
                                Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <!--BOTON Herramientas-->
                            <Button
                            Background="Transparent"
                            Margin="0,20,0,0"
                            MaxHeight="30"
                            HorizontalContentAlignment="Left">
                                <StackPanel
                                Orientation="Horizontal"
                                Margin="15,0,0,0">
                                    <fa:IconImage 
                                    Foreground="White"
                                    Icon="List"/>
                                    <TextBlock
                                VerticalAlignment="Center"
                                Text="Herramientas"
                                Foreground="White"
                                Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <!--BOTON LABORATORIOS-->
                            <Button
                            Background="Transparent"
                            Margin="0,20,0,0"
                            MaxHeight="30"
                           HorizontalContentAlignment="Left">
                                <StackPanel
                                Orientation="Horizontal"
                                Margin="15,0,0,0">
                                    <fa:IconImage 
                                    Foreground="White"
                                    Icon="List"/>
                                    <TextBlock
                                VerticalAlignment="Center"
                                Text="Herramientas"
                                Foreground="White"
                                Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <!--BOTON LABORATORISTAS-->
                            <Button
                            Background="Transparent"
                            Margin="0,20,0,0"
                            MaxHeight="30"
                           HorizontalContentAlignment="Left">
                                <StackPanel
                                Orientation="Horizontal"
                                Margin="15,0,0,0">
                                    <fa:IconImage 
                                    Foreground="White"
                                    Icon="List"/>
                                    <TextBlock
                                VerticalAlignment="Center"
                                Text="Herramientas"
                                Foreground="White"
                                Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        
                        <StackPanel
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,70">
                            <!--BOTON PRESTAMOS-->
                            <Button
                            Background="Transparent"
                            Margin="0,20,0,0"
                            MaxHeight="30"
                            HorizontalContentAlignment="Left">
                                <StackPanel
                                Orientation="Horizontal"
                                Margin="15,0,0,0">
                                    <fa:IconImage 
                                    Foreground="White"
                                    Icon="List"/>
                                    <TextBlock
                                VerticalAlignment="Center"
                                Text="Cuentas"
                                Foreground="White"
                                Margin="10,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <customControls:btnLateralTemplate
                                Margin="0,20,0,0"
                                MaxHeight="30"
                                HorizontalContentAlignment="Left"
                                />

                        </StackPanel>
                    </Grid>
                </Border>
            </DockPanel>
            <DockPanel Width="auto">
                <!--TOP PANEL-->
                <DockPanel DockPanel.Dock="Top">
                    <StackPanel
                        Margin="35,0,0,0"
                        VerticalAlignment="Center">
                        <TextBlock
                            x:Name="txtNombreApartado"
                            TextAlignment="Center"
                            TextWrapping="Wrap"
                            Foreground="#31579d"      
                            Text="NOMBRE DEL APARTADO" FontFamily="Roboto Mono" FontSize="20" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                        <customControls:btnClose
                            Margin="0,10,5,10"/>
                        <customControls:btnMinimize 
                            Margin="0,10,30,10"/>
                    </StackPanel>
                </DockPanel>
                
                <!--DOCKPANEL CONTENT-->
                <DockPanel
                    Margin="10,0,10,10"
                    x:Name="dockChilds"
                    Background="LightCyan">
                </DockPanel>
                
                
                
                
                
            </DockPanel>
        </DockPanel>
    </Border>
</Window>
