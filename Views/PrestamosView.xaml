<Window x:Class="PrestamosWPF.Views.PrestamosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:local="clr-namespace:PrestamosWPF.Views"
        xmlns:customControls="clr-namespace:PrestamosWPF.customControls"
        xmlns:viewModel="clr-namespace:PrestamosWPF.ViewModels"
        mc:Ignorable="d" MinHeight="600" MinWidth="983"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MaxWidth="983"
        MaxHeight="600">
    <Window.DataContext>
        <viewModel:PrestamosViewModel />
    </Window.DataContext>

    <Border 
        Background="Transparent" 
                        Margin="0">
        <StackPanel Orientation="Vertical">
            <Grid
                Height="485"
                Margin="0,0,4,0">
                <ScrollViewer
                    Background="Transparent"
                    Margin="0">

                    <DataGrid
                        x:Name="dtgPrestamos">
                        
                    </DataGrid>

                </ScrollViewer>
            </Grid>
            <StackPanel 
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                <customControls:btnCardViewTemplate
                                    x:Name="btnAgregarRegistro"
                                    Margin="0,30,40,0">
                </customControls:btnCardViewTemplate>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
