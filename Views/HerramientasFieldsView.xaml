            <Setter Property="FontSize" Value="22" />
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <TextBlock Text="Registro de herramienta" />
            <TextBlock Text="Nombre" />
            <TextBox Text="" />
            <TextBlock Text="Descripcion" />
            <TextBox Text="" />
            <TextBlock Text="Cantidad" />
            <TextBox Text="" />
            <TextBlock Text="Estado" />
            <TextBox Text="" />
        </StackPanel>
    </Grid>
</Window>
