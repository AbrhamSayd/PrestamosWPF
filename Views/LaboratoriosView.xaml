<UserControl
    x:Class="PrestamosWPF.Views.LaboratoriosView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PrestamosWPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:PrestamosWPF.ViewModels"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:customControls="clr-namespace:PrestamosWPF.customControls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <viewModels:LaboratoriosViewModel />
    </UserControl.DataContext>

    <DockPanel>
        <StackPanel
            Margin="20,10,0,20"
            HorizontalAlignment="left"
            DockPanel.Dock="top">
            <TextBlock
                Text="Laboratorios"
                FontFamily="Roboto Mono"
                FontSize="30"
                FontWeight="SemiBold"
                Foreground="#31579d"
                TextAlignment="Center"
                TextWrapping="Wrap" />
        </StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel
                Grid.Column="0"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                    <fa:IconImage
                    Width="20"
                    Height="20"
                    Foreground="#1e355e"
                    Icon="Search" />
                    <TextBox
                    Width="300"
                    Height="24"
                    Margin="5,5,0,0"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="#1e355e"
                    BorderThickness="0,0,0,1"
                    CaretBrush="#1e355e"
                    FontFamily="Montserrat"
                    FontSize="13"
                    FontWeight="Medium"
                    Foreground="#1e355e"
                    Text="Search..." />
                </StackPanel>
                <Button
                Margin="0,5,0,0"
                Grid.Column="1"
                VerticalAlignment="Top"
                Command="{Binding GetByAllCommand}"
                Content="Buscar"
                Cursor="Hand"
                Style="{StaticResource CardButton}">
                </Button>
                <customControls:btnCardViewTemplate
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                Grid.Column="2"/>
            </Grid>
            <Border
            Grid.Row="1"
            Padding="10"
            Background="White"
            CornerRadius="20">
                <DataGrid
                    AutoGenerateColumns="True"
                    ItemsSource="{Binding LabsTable, Mode=TwoWay, NotifyOnSourceUpdated=True}"
                Background="White"
                BorderThickness="0"
                ColumnWidth="*">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="#1e355e" />
                            <Setter Property="Padding" Value="10,0,0,10" />
                            <Setter Property="FontFamily" Value="Montserrat" />
                            <Setter Property="FontSize" Value="15" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                </DataGrid>
            </Border>
        </Grid>
    </DockPanel>
</UserControl>
